<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.lift.ImageMoodLogActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select Image"
        android:id="@+id/selectimg"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/img"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_gravity="center"
        android:id="@+id/img"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/uploadimg"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Upload Image"
        android:id="@+id/uploadimg"
        android:layout_marginBottom="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/selectimg"
        android:layout_alignStart="@+id/selectimg" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Upload a picture with how you're feeling"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_above="@+id/selectimg"
        android:layout_marginBottom="63dp" />

</RelativeLayout>
